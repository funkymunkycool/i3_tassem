#Open Chromium with win+i
bindsym $mod+i exec chromium-browser

#Key bindings to control locking, suspending, rebooting and shutting down machine
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id /home/elsayed/.i3/lock.sh, mode "default"
    bindsym e exec --no-startup-id i3exit logout, mode "default"
    bindsym s exec systemctl suspend,  mode "default"
    bindsym h exec --no-startup-id systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id sudo reboot, mode "default"
    bindsym Shift+s exec --no-startup-id sudo shutdown now, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Pause mode "$mode_system"

# moving along the workspaces left and right/n and m
bindsym Mod4+m workspace next_on_output
bindsym Mod4+n workspace prev_on_output

